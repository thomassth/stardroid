<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="?android:attr/actionBarSize"
    android:orientation="vertical"
    tools:context=".activities.fragments.BLOBViewerFragment">

    <ProgressBar
        android:id="@+id/blob_loading"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_weight="0"
        android:indeterminate="true"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="4dp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinner_select_image_blob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="12dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_image_receive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinner_select_image_blob"
            android:layout_marginBottom="8dp"
            android:text="@string/receive_images"
            app:switchMinWidth="60dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_image_stretch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/switch_image_receive"
            android:layout_marginBottom="8dp"
            android:text="@string/fits_image_stretching"
            app:switchMinWidth="60dp" />

        <TextView
            android:id="@+id/image_info_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/switch_image_stretch"
            android:text="@string/image_info"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TableLayout
            android:id="@+id/blob_info_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/image_info_label"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/image_info_label"
            android:stretchColumns="*">

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/file_size" />

                <TextView
                    android:id="@+id/blob_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/unknown" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dimensions" />

                <TextView
                    android:id="@+id/blob_dimensions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/unknown" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/format" />

                <TextView
                    android:id="@+id/blob_format"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/unknown" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bit_depth" />

                <TextView
                    android:id="@+id/blob_bpp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/unknown" />
            </TableRow>
        </TableLayout>

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/blob_viewer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/blob_info_table"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/blob_error_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/blob_info_table"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/no_incoming_data"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    </RelativeLayout>
</LinearLayout>